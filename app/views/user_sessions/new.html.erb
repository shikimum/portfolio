<div class="container-fluid" style="padding-inline: calc((100vw - 1000px) / 2); background-color: #81bbf5ce;">
  <div class="row">
    <div class="col-md-10 col-lg-5 mx-auto text-light custom-font">
      <h1><%= t('.title') %></h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit t('.login'), class: "btn btn-light text-secondary mb-3" %>
      <% end %>
      <div class='text-center'>
        <%= link_to t('.to_register_page'), new_user_path, class: 'btn btn-light text-secondary mx-3' %>
        <%= link_to t('.password_forget'), '#', class: 'btn btn-light text-secondary' %>
      </div>
    </div>
  </div>
</div>