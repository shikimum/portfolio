<header>
  <nav class='navbar navbar-expand-sm navigation custom-font fixed-top' style="background-color:#81bbf5ce;">
    <%= link_to '/', class: 'navbar-brand' do %>
      <p class="h3 text-light">漫画の処方箋</p>
    <% end %>
    <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to t('header.discussion'), '#', class: 'nav-link dropdown-toggle text-light', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-board-menu' %>
          <div class='dropdown-menu dropdown-menu-end dropdown-menu-dark' style="background-color:#81bbf5ce;">
            <%= link_to t('header.discussion_index'), discussions_path, class: 'dropdown-item text-light link-opacity-100-hover' %>
            <%= link_to t('header.create_discussion'), new_discussion_path, class: 'dropdown-item text-light link-opacity-100-hover' %>
          </div>
        </li>

        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to t('header.review'), '#', class: 'nav-link dropdown-toggle text-light', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-board-menu' %>
          <div class='dropdown-menu dropdown-menu-end dropdown-menu-dark' style="background-color:#81bbf5ce;">
            <%= link_to t('header.review_index'), reviews_path, class: 'dropdown-item text-light' %>
            <%= link_to t('header.create_review'), new_review_path, class: 'dropdown-item text-light' %>
          </div>
        </li>

        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to '#', class: 'nav-link', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-profile' do %>
            <i class="bi bi-person-circle rounded-circle mr15" style="width: 40px; height: 40px;"></i>
          <% end %>
          <div class='dropdown-menu dropdown-menu-end dropdown-menu-dark' style="background-color:#81bbf5ce;">
            <div class='dropdown-item text-light'><%= current_user.decorate.users_name %></div>
            <div class='dropdown-divider'></div>
            <%= link_to t('header.profile'), profile_path, class: 'dropdown-item text-light' %>
            <%= link_to t('header.like'), likes_path, class: 'dropdown-item text-light' %>
            <%= link_to t('header.diagnosis_results'),  your_result_profile_path, class: 'dropdown-item text-light' %>
            <%= link_to t('header.logout'), logout_path, class: 'dropdown-item text-light', data: { turbo_method: :delete } %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>
