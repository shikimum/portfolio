<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
  <div class="col-md-10 col-lg-8 mx-auto custom-font text-secondary">
      <h1><%= t('.title') %></h1>
      <div class="mb-3">
        <strong><%= User.human_attribute_name(:users_name) %></strong>
      </div>
      <div class="mb-3">
        <%= current_user.decorate.users_name %>
      </div>
      <div class="mb-3">
        <strong><%= User.human_attribute_name(:email) %></strong>
      </div>
      <div class="mb-3">
        <%= current_user.email %>
      </div>
      <div class='text-right'>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-light float-right text-secondary' %>
      </div>
    </div>
  </div>
</div>