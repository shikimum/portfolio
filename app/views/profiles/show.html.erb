<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="position-relative text-center">
    <img src="<%= image_path('profile.png') %>" alt="Your Image" class="img-fluid">
    <div class="position-absolute top-50 start-50 translate-middle text-center">
      <div class="row">
        <div class="col-12 col-md-10 col-lg-12 mx-auto custom-font text-secondary">
          <h1 class="text-nowrap text-center"><%= t('.title') %></h1>
          <div>
            <strong><%= User.human_attribute_name(:users_name) %></strong>
          </div>
          <div class="mb-3">
            <%= current_user.decorate.users_name %>
          </div>
          <div>
            <strong><%= User.human_attribute_name(:email) %></strong>
          </div>
          <div class="mb-3">
            <%= current_user.email %>
          </div>

          <% if current_user.line_user_id.present? %>
          <div>
            <strong>LINEユーザーID</strong>
          </div>
          <div class="mb-3">
            <span class="text-success">連携済み</span>
          </div>
        <% else %>
          <div class="text-danger">
            <strong>LINEユーザーID</strong>
          </div>
          <div class="mb-3">
            未連携
          </div>
        <% end %>

          <div class='text-right'>
            <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-light float-right text-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>