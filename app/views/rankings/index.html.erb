<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="position-relative text-center">
    <img src="<%= image_path('ranking.png') %>" alt="Your Image" class="img-fluid">
    <div class="position-absolute top-50 start-50 translate-middle text-center">
      <div class="row">
        <div class="col-12 col-md-10 col-lg-12 mx-auto custom-font text-secondary">
          <h1 class="text-nowrap text-center"><%= t('.title') %></h1>
          
          <!-- Ranking List -->
          <ol class="mt-4">
            <% @ranking.each_with_index do |manga, index| %>
              <li>
                <%= ranking_icon(index + 1) %> <%= manga.title %> - いいね数: <%= manga.likes.count %>
              </li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>

<%# Helper method to determine the ranking icon based on position %>
<% def ranking_icon(position) %>
  <% case position %>
    <% when 1 %>
      <%= image_tag("gold_icon.png", class: "ranking-icon") %> 
    <% when 2 %>
      <%= image_tag("silver_icon.png", class: "ranking-icon") %> 
    <% when 3 %>
      <%= image_tag("bronze_icon.png", class: "ranking-icon") %> 
    <% else %>
      <%= position %>
  <% end %>
<% end %>
