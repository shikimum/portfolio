<div class="container mt-5">
  <% @reviews.each do |review| %>
    <div class="card mt-3">
      <div class="card-body">
        <h5 class="card-title"><%= review.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= review.user_name %></h6>
        <p class="card-text"><%= review.content %></p>
      </div>
    </div>
  <% end %>
</div>